{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "gig",
    "type": "object",
    "properties": {
      "name": { "type": "string", "minLength": 2, "maxLength": 32 },
      "artist": { "type": "string", "minLength": 2, "maxLength": 32 },
      "add_image": { "type": "string", "minLength": 6, "maxLength": 500 },
      "description": { "type": "string", "minLength": 5, "maxLength": 500 },
      "gig_date": { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$", "minLength": 10, "maxLength": 10 },
      "time": {
        "type": "string",
        "pattern": "^([01]\\d|2[0-3]):[0-5]\\d$",
        "minLength": 5,
        "maxLength": 5
      },
      "address": {
        "type": "string",
        "minLength": 5,
        "maxLength": 50
      },
      "city": { "type": "string", "minLength": 2, "maxLength": 32 },
      "ticket_sale_link": { "type": "string", "minLength": 5, "maxLength": 100, "pattern": "^(https?://)?([a-zA-Z0-9-]+\\.)+[a-zA-Z]{2,}$" },
      "genre": { "type": "string", "minLength": 2, "maxLength": 32 },
      "artist_link": { "type": "string", "minLength": 5, "maxLength": 100, "pattern": "^(https?://)?([a-zA-Z0-9-]+\\.)+[a-zA-Z]{2,}$" },
      "user_id": { "type": "string", "minLength": 2, "maxLength": 32 }
    },
    "required": ["name", "artist", "add_image", "description", "gig_date", "time", "address", "city", "ticket_sale_link", "genre", "artist_link"]
  }
  