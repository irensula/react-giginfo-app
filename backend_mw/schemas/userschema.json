{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "customer",
    "type": "object",
    "properties": {
        "username": 
        {
        "type": "string",
        "minLength": 6,
        "maxLength": 32
        },
        "email": 
        {
        "type": "string",
        "pattern": "^\\S+@\\S+\\.\\S+$",
        "minLength": 5,
        "maxLength": 50
        },
        "phone": 
        {
            "type": "string",
            "pattern": "^\\+?\\d{8,15}$",
            "minLength": 8,
            "maxLength": 15
        },
        "password": 
        {
        "type": "string",
        "minLength": 8,
        "maxLength": 32
        }
    },
    "required": [
    "username",
    "email",
    "phone",
    "password"
    ]
}